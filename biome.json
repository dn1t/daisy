{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "files": {
    "includes": [
      "**/package.json",
      "**/tsconfig.json",
      "**/tsconfig.*.json",
      "**/*.config.{js,ts,cjs,cts,mjs,mts}",
      "scripts/**/*",
      "apps/account/src/**/*",
      "apps/direct/src/**/*",
      "apps/extension/src/**/*",
      "apps/landing/src/**/*",
      "apps/landing/server.js",
      "apps/store/src/**/*",
      "packages/auth/src/**/*",
      "packages/ui/src/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "nursery": {
        "useSortedClasses": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
